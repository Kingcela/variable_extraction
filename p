            <annotation encoding="application/x-tex" id="S2.E2.m1.1d">
             \delta\zeta_{k_{1}}\sim\delta N\equiv|N_{A}-N_{B}|~{}.
            </annotation>
           </semantics>
          </math>
         </td>
         <td class="ltx_eqn_cell ltx_eqn_center_padright">
         </td>
         <td class="ltx_eqn_cell ltx_eqn_eqno ltx_align_middle ltx_align_right" rowspan="1">
          <span class="ltx_tag ltx_tag_equation ltx_align_right">
           (2)
          </span>
         </td>
        </tr>
       </table>
